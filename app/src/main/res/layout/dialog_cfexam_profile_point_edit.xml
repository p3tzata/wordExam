<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_dialog_new_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:text="Item"

            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_dialog_newItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:inputType="textMultiLine" />


        <TextView
            android:id="@+id/lbl_dialog_new_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:text="Period"

            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_dialog_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:inputType="number" />

        <RadioGroup
            android:id="@+id/rg_periodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rg_period_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minute" />

            <RadioButton
                android:id="@+id/rg_period_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day" />

            <RadioButton
                android:id="@+id/rg_period_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Month" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/chkb_dialog_edit_cfprofile_point_loop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looped" />

        <Button
            android:id="@+id/btn_dialog_newItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"

            android:text="Save" />

    </LinearLayout>

</LinearLayout>